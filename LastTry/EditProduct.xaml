<Window x:Class="LastTry.EditProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LastTry"
        mc:Ignorable="d"
        Title="EditProduct" Height="449.049" Width="375.687">
    <Grid Margin="0,0,2,1">
        <StackPanel>
            <Label>Name</Label>
            <TextBox Text="{Binding EditProd.Name}"></TextBox>
            <Label>Description</Label>
            <TextBox Text="{Binding EditProd.Description}"></TextBox>
            <Label>Manufacturer</Label>
            <TextBox Text="{Binding EditProd.Manufacturer }"></TextBox>
            <Label>Cost</Label>
            <TextBox Text="{Binding EditProd.Cost}"></TextBox>
            <Label>CountDiscount</Label>
            <TextBox Text="{Binding EditProd.CountDiscount}"></TextBox>
        </StackPanel>
        <Button Content="Delete" Margin="0,235,0,158" Click="Delete"/>
        <Button Content="Update" Margin="0,259,0,134" Click="Update"/>
    </Grid>
</Window>
