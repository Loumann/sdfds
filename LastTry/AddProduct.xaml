<Window x:Class="LastTry.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LastTry"
        mc:Ignorable="d"
        Title="AddProduct" Height="454.675" Width="449.351">
    <Grid>
        <StackPanel DataContext="{Binding NewProduct}">
            <Label>Name</Label>
            <TextBox Text="{Binding Name}"></TextBox>
            <Label>Description</Label>
            <TextBox Text="{Binding Description}"></TextBox>
            <Label>Manufacturer</Label>
            <TextBox Text="{Binding Manufacturer }"></TextBox>
            <Label>Cost</Label>
            <TextBox Text="{Binding Cost}"></TextBox>
            <Label>CountDiscount</Label>
            <TextBox Text="{Binding CountDiscount}"></TextBox>
        </StackPanel>
        <Button Content="Add" Margin="0,235,0,158" Click="Button_Click"/>

    </Grid>
</Window>
